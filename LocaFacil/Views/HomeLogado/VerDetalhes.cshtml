        .container.itens-car h1 {
            color: black;
            margin-top: 10px;
        }

        .container.car-details {
            text-align: left;
            width: 70%; /* Ajuste a largura conforme desejado */
            margin: 0 auto;
            background-color: #DCDCDC;
            border-radius: 10px;
        }

            .container.car-details p {
