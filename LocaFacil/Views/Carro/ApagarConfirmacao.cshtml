@model CarroModel
@{
    ViewData["Title"] = "Confirmação apagar veículo";
}
<div class="text-center">
    <h3>Realmente deseja apagar o carro: @Model.Modelo ?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Carro" role="button">Cancelar Exclusão</a>
<a class="btn btn-secondary btn-block" asp-action="Apagar" asp-controller="Carro" asp-route-id="@Model.Id" role="button">Apagar Veículo</a>

