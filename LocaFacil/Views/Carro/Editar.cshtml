@using LocaFacil.Enums;
@model CarroModel
@{
    ViewData["Title"] = "Adicionar Carro";
}
<style>
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .agrupamento {
        background-color: gray;
        border-radius: 7px;
    }

    .form-group {
        margin: 5px 0;
    }

    .btn-primary {
        background-color: blue; /* Cor mais escura */
        color: #fff;
        transition: background-color 0.5s;
    }

        .btn-primary:hover {
            background-color: #555; /* Cor mais escura ao passar o mouse */
        }
</style>

<div class="form-container">
    <h1 class="display-4">Cadastrar Carro</h1>
    <div class="agrupador">
        <form asp-controller="Carro" asp-action="Editar" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label for="marca" class="form-label">Marca</label>
                <input type="text" asp-for="Marca" class="form-control" placeholder="Digite a Marca do veículo" />
                @Html.ValidationMessageFor(x => x.Marca)
            </div>

            <div class="form-group">
                <label for="modelo" class="form-label">Modelo</label>
                <input type="text" asp-for="Modelo" class="form-control" placeholder="Digite o Modelo do veículo" />
                @Html.ValidationMessageFor(x => x.Modelo)
            </div>

            <div class="form-group">
                <label for="km" class="form-label">Km</label>
                <input type="text" asp-for="Km" class="form-control" placeholder="Digite a Quilometragem" />
                @Html.ValidationMessageFor(x => x.Km)
            </div>

            <div class="form-group">
                <label for="cor" class="form-label">Cor</label>
                <input type="text" asp-for="Cor" class="form-control" placeholder="Digite a Cor do veículo" />
                @Html.ValidationMessageFor(x => x.Cor)
            </div>

            <div class="form-group">
                <label for="ano" class="form-label">Ano</label>
                <input type="text" asp-for="Ano" class="form-control" placeholder="Digite o Ano do veículo" />
                @Html.ValidationMessageFor(x => x.Ano)
            </div>

            <div class="form-group">
                <label for="transmissao" class="form-label">Transmissão</label>
                <input type="text" asp-for="Transmissao" class="form-control" placeholder="Digite qual a Transmissão do veículo" />
                @Html.ValidationMessageFor(x => x.Transmissao)
            </div>

            <div class="form-group">
                <label for="descricao" class="form-label">Descrição</label>
                <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a Descrição do veículo" />
                @Html.ValidationMessageFor(x => x.Descricao)
            </div>

            <button type="submit" class="btn btn-primary btn-block">Editar</button>
            <a class="btn btn-secundary btn-block" asp-action="Index" asp-controller="Carro" role="button">Voltar</a>
        </form>
    </div>
</div>