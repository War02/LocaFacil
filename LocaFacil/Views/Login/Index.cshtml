@model LoginModel
@{
    Layout = "_LayoutDeslogada";
    ViewData["Title"] = "Login";
}
<style>
    #form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* Estilos adicionais, se necessário */
    #img {
        text-align: center;
    }
</style>

<div id="img">
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger">
            @TempData["MensagemErro"]
        </div>
    }
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-sucess">
            @TempData["MensagemSucesso"]
        </div>
    }
</div>
<form id="form" action="/Login/entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Usuário</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <p class="mb-4 text-sm-center mx-auto">
                Esqueceu sua senha ?
                <a asp-action="RedefinirSenha" asp-controller="Login" class="text-primary text-gradient font-weight-bold">
                    Redefinir Senha
                </a>
            </p>
        </div>

    </div>

    <!-- Submit button -->
    <button id="button" type="submit" class="btn btn-secondary form-control" asp-action="Index" asp-controller="Home" style="background-color: #2F3538;">Continuar</button>
    <h6> </h6>
    <a class="btn btn-secondary btn-block form-control" asp-action="Index" asp-controller="Login" role="button" style="background-color: gray;">Voltar</a>

    <!-- Register buttons -->
     <div class="text-center">
        <p>Não possui uma conta ? <a asp-action="Criar" asp-controller="Usuario">Cadastre-se</a></p>
    </div> 
</form> 